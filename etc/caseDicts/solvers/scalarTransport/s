FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    object      s;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

sInlet          1;

dimensions      [0 0 0 0 0 0 0];  // s can represent any scalar
                                  // with any dimensional units
internalField   uniform 0;

boundaryField
{
    inlet
    {
        type            fixedValue;
        value           uniform $sInlet;
    }

    ".*"
    {
        type            zeroGradient;
    }

    #includeEtc "caseDicts/setConstraintTypes"
}


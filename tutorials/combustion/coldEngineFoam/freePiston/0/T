FoamFile
{
    version     2.0;
    format      binary;
    class       volScalarField;
    location    "0";
    object      T;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

#include "include/caseSettings"

dimensions      [0 0 0 1 0 0 0];

internalField   uniform $:internalField.T;

boundaryField
{
    back
    {
        type            wedge;
    }

    front
    {
        $back;
    }

    liner
    {
        $:wall.T;
    }

    cylinderHead
    {
        $liner;
    }

    piston
    {
        $liner;
    }
}



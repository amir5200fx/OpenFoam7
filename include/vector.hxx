namespace tnbLib
{

	// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

	typedef Vector<scalar> vector;


	//- Data associated with vector type are contiguous
	template<>
	inline bool contiguous<vector>() { return true; }


	template<class Type>
	class flux
		:
		public innerProduct<vector, Type>
	{};


	template<>
	class flux<scalar>
	{
	public:

		typedef scalar type;
	};


	// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

